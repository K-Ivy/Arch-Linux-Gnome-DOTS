// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "theme": {
    "mode": "system",
    "light": "Nordforest One",
    "dark": "Nordforest One"
  },

  "buffer_font_family": "FiraCode Nerd Font Propo",
  "buffer_font_size": 18,
  "ui_font_size": 16,

  "buffer_line_height": {
    "custom": 1.9
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },

  "inlay_hints": {
    "enabled": true
  },

  "scrollbar": {
    "show": "auto",
    "cursors": false,
    "git_diff": false,
    "search_results": true,
    "selected_text": false,
    "selected_symbol": false,
    "diagnostics": "none",
    "axes": {
      "horizontal": false,
      "vertical": true
    }
  },

  "ensure_final_newline_on_save": false,
  "format_on_save": "off",

  "autosave": "on_window_change",
  "restore_on_startup": "last_session",

  "soft_wrap": "editor_width",

  "assistant": {
    "button": true
  },

  "collaboration_panel": {
    "button": false
  },

  "git_panel": {
    "dock": "right"
  },

  "outline_panel": {
    "button": false
  },

  "terminal": {
    "dock": "left"
  }
}
